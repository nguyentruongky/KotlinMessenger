<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@android:color/holo_green_light"    tools:context=".registerLogin.RegisterActivity">    <EditText        android:id="@+id/username_text_edit_register"        android:layout_width="363dp"        android:layout_height="50dp"        android:layout_marginStart="24dp"        android:layout_marginTop="32dp"        android:layout_marginEnd="24dp"        android:height="50dp"        android:background="@drawable/rounded_edittext_register_login"        android:ems="10"        android:hint="Username"        android:inputType="textPersonName"        android:paddingLeft="16dp"        android:paddingRight="16dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/avatar_button_register" />    <EditText        android:id="@+id/email_text_edit_register"        android:layout_width="363dp"        android:layout_height="50dp"        android:layout_marginTop="24dp"        android:height="50dp"        android:background="@drawable/rounded_edittext_register_login"        android:ems="10"        android:hint="Email"        android:inputType="textEmailAddress"        android:paddingLeft="16dp"        android:paddingRight="16dp"        app:layout_constraintEnd_toEndOf="@+id/username_text_edit_register"        app:layout_constraintStart_toStartOf="@+id/username_text_edit_register"        app:layout_constraintTop_toBottomOf="@+id/username_text_edit_register" />    <EditText        android:id="@+id/password_text_edit_register"        android:layout_width="363dp"        android:layout_height="50dp"        android:layout_marginTop="24dp"        android:height="50dp"        android:background="@drawable/rounded_edittext_register_login"        android:ems="10"        android:hint="Password"        android:inputType="textWebPassword"        android:paddingLeft="16dp"        android:paddingRight="16dp"        app:layout_constraintEnd_toEndOf="@+id/email_text_edit_register"        app:layout_constraintStart_toStartOf="@+id/email_text_edit_register"        app:layout_constraintTop_toBottomOf="@+id/email_text_edit_register" />    <Button        android:id="@+id/register_button_register"        android:layout_width="0dp"        android:layout_height="50dp"        android:layout_marginTop="24dp"        android:text="Register"        android:background="@drawable/rounded_button"        app:layout_constraintEnd_toEndOf="@+id/password_text_edit_register"        app:layout_constraintStart_toStartOf="@+id/password_text_edit_register"        app:layout_constraintTop_toBottomOf="@+id/password_text_edit_register" />    <TextView        android:id="@+id/login_button_register"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="Already have an account? "        android:textColor="@android:color/white"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="@+id/register_button_register"        app:layout_constraintStart_toStartOf="@+id/register_button_register"        app:layout_constraintTop_toBottomOf="@+id/register_button_register" />    <Button        android:id="@+id/avatar_button_register"        android:layout_width="150dp"        android:layout_height="150dp"        android:layout_marginTop="40dp"        android:background="@drawable/rounded_image_view"        android:text="Select Image"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/avatar_imageview_register"        android:layout_width="150dp"        android:layout_height="150dp"        app:layout_constraintBottom_toBottomOf="@id/avatar_button_register"        app:layout_constraintEnd_toEndOf="@id/avatar_button_register"        app:layout_constraintStart_toStartOf="@id/avatar_button_register"        app:layout_constraintTop_toTopOf="@id/avatar_button_register" /></androidx.constraintlayout.widget.ConstraintLayout>